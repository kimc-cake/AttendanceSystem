@page
@model AttendanceSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="text-center text-primary mb-4">Attendance System</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mb-3">
        <strong>Error:</strong> @Model.ErrorMessage
    </div>
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="border rounded p-3 mb-3">
            <h5 class="text-success">Add Sample Students</h5>
            <form method="post" asp-page-handler="Initialize">
                <button type="submit" class="btn btn-success">
                    Add Students
                </button>
            </form>

            @if (TempData["SeedError"] != null)
            {
                <p class="text-danger mt-2">@TempData["SeedError"]</p>
            }
        </div>
    </div>

    <div class="col-md-8">
        <div class="border rounded p-3">
            <h5 class="text-primary">Students</h5>

            @if (!Model.Students.Any())
            {
                <p class="text-muted">No students found. Please add sample students.</p>
            }
            else
            {
                <table class="table table-striped table-bordered mt-2">
                    <thead class="table-light">
                        <tr>
                            <th>Student Number</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.Students)
                        {
                            <tr>
                                <td>@s.StudentNumber</td>
                                <td>@s.FullName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <a asp-page="/Attendance/Mark" class="btn btn-primary">
            Mark Attendance
        </a>
    </div>
</div>
